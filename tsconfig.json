{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": [
      "vite/client",
      "jest",
      "node",
    ],
    "rootDir": ".",
    "paths": {
      "@fastkit/*": ["packages/*/src"],
      "fastkit/*": ["packages/fastkit/src"],
      "~~": [
        "./docs"
      ],
      "~~/*": [
        "./docs/*"
      ],
      "@@": [
        "./docs"
      ],
      "@@/*": [
        "./docs/*"
      ],
      "~": [
        "./docs/src"
      ],
      "~/*": [
        "./docs/src/*"
      ],
      "@": [
        "./docs/src"
      ],
      "@/*": [
        "./docs/src/*"
      ],
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src",
    "core",
    "docs"
  ]
}
