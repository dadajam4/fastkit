  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/hashed-sync.d.mts",
      "import": {
        "default": "./dist/hashed-sync.mjs"
      }
    },
    "./*": "./dist/*"
  },
  "main": "./dist/hashed-sync.mjs",
